function [y] = getK(x, a)

k = power(1/2, x/3);

% k = 2^-x/3
% lnk=-x/3*ln2
% x = -lnk/ln2*3

% k = 1.0-(1.0-a)/(2^-x/3)
% k-1.0 = (1.0-a)/(2^-x/3)
% (2^-x/3) = (1.0-a)/(k-1.0)
% -x/3*ln2 = ln (1.0-a)/(k-1.0)
% x/3 = ln (1.0-a)/(k-1.0)  / ln2
k0 = 0.05

k1 = a*k;
k2 = 1.0 - (1.0-a)/k;

    if (k2 > k0)
        y = k2;
    else
        y = power(1/2, x/3+1/1*(-log()/log(2)+log((1.0-a)/(1.0-0.05))/log(2)))
    end
end
